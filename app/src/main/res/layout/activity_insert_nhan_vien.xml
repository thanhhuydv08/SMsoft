<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".InsertNhanVienActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:theme="@style/ToolBarStyle"
        android:layout_width="match_parent"
        android:background="@color/md_light_blue_500"
        android:layout_height="?attr/actionBarSize" />

    <RelativeLayout
        android:layout_below="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/bg_insert_nhanvien"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="100dp"
            android:background="@color/White"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_index_card" />

            <EditText
                android:inputType="number"
                android:textColorHighlight="@color/White"
                android:layout_marginRight="10dp"
                android:id="@+id/edt_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/img_id"
                android:fontFamily="sans-serif"
                android:hint="Index code"
                android:textColorHint="@color/Metallic_Silver"
                android:textStyle="italic" />

            <ImageView
                android:id="@+id/img_username"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/img_id"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_username_2" />

            <EditText
                android:textColorHighlight="@color/White"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_id"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_id"
                android:fontFamily="sans-serif"
                android:hint="Username"
                android:textColorHint="@color/Metallic_Silver"
                android:textStyle="italic" />

            <ImageView

                android:id="@+id/img_birthday"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/img_username"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_password" />

            <EditText
                android:textColorHighlight="@color/White"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/edt_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_id"
                android:fontFamily="sans-serif"
                android:hint="Password"
                android:textColorHint="@color/Metallic_Silver"
                android:textStyle="italic" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@+id/img_birthday"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_address" />

            <TextView
                android:textColorHighlight="@color/White"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:id="@+id/txtv_permision"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_below="@+id/edt_pass"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_id"
                android:fontFamily="sans-serif"
                android:text="Staff"
                android:textSize="18dp"
                android:textColorHint="@color/Metallic_Silver"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/txtv_add"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Thêm"
                    android:background="@color/blackberry"
                    android:textColor="@color/Black"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/txtv_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Hủy"
                    android:textColor="@color/Black"
                    android:background="@color/blackberry"
                    android:textSize="25dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>