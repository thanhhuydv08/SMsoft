<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/Milk_White"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtv_stt"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="STT"
        android:textColor="@color/Black" />

    <TextView

        android:id="@+id/txtv_name_product"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Tên thực đơn "
        android:textColor="@color/Black" />
    <TextView
        android:textColor="@color/Black"
        android:id="@+id/txtv_count_product"
        android:layout_weight="2"
        android:text="Sl"
        android:layout_width="5dp"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/Black"
        android:id="@+id/txtv_price_product"
        android:layout_weight="2"
        android:text="Giá"
        android:layout_width="10dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtv_status_product"
        android:textColor="@color/Black"
        android:layout_weight="3"
        android:text="Status"
        android:layout_width="30dp"
        android:layout_height="wrap_content" />
</LinearLayout>